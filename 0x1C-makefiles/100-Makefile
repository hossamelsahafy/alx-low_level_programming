SRC = main.c school.c
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic
OBJ = $(SRC:.c=.o)
CC = gcc

all: $(NAME)

$(NAME): $(OBJ)
	@$(CC) $(OBJ) -o $(NAME)

%.o: %.c m.h
	@$(CC) $(CFLAGS) -c $< -o $@

.PHONY: clean oclean fclean re
clean:
	@rm -f *~ $(NAME)

oclean:
	@rm -f *.o

fclean: clean oclean

re: fclean all
