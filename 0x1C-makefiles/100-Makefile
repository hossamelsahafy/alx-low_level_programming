CC = gcc
SRC = $(wildcard *.c)
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(NAME)

$(NAME): $(OBJ)
	@$(CC) $(OBJ) -o $(NAME)

%.o: %.c m.h
	@$(CC) $(CFLAGS) -c $< -o $@

clean:
	@/bin/rm -f *~ \#*\# $(NAME)

oclean:
	@/bin/rm -f $(OBJ)

fclean: clean oclean

re: fclean all
