CC = gcc
SRC = main.c shool.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f


all: pre $(NAME)

pre:
	@$(RM) $(NAME)
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

%.o: %.c m.h
	$(CC) -c $< -o $@

.PHONY: all clean oclean fclean re

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean:
	$(RM) *~ $(NAME)
	$(RM) $(OBJ)

re: oclean all
